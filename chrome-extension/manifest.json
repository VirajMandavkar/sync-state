{
  "manifest_version": 3,
  "name": "SyncState - Shopify to Amazon Inventory Sync",
  "version": "1.0.0",
  "description": "Link Shopify products to Amazon ASINs for instant inventory synchronization",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://*.myshopify.com/admin/products/*",
    "https://*.myshopify.com/admin/products*",
    "https://admin.shopify.com/store/*/products/*",
    "https://api.syncstate.local/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "SyncState Product Mapper"
  },
  "content_scripts": [
    {
      "matches": ["https://*.myshopify.com/admin/products/*", "https://admin.shopify.com/store/*/products/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
