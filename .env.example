# SyncState Backend Configuration

# Node environment
NODE_ENV=production

# Server port (Render sets this automatically, but can override)
PORT=3000

# AWS DynamoDB Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
DYNAMODB_TABLE=syncstate-inventory

# Optional: Shopify API config (if needed)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_PASSWORD=your_shopify_api_password
SHOPIFY_SHOP_NAME=your-shop

# Logging
LOG_LEVEL=info
